{
    "name": "desmart/laravel-layout",
    "description": "Simple page structure controller for Laravel4",
    "authors": [
        {
            "name": "Radoslaw Mejer",
            "email": "radmen@desmart.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.0.x"
    },
    "autoload": {
        "psr-0": {
            "DeSmart\\Layout": "src/"
        }
    },
    "suggest": {
      "desmart/response-exception": "To do overwrite response from action"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "illuminate/routing": "4.0.x",
        "illuminate/container": "4.0.x",
        "illuminate/view": "4.0.x",
        "illuminate/http": "4.0.x",
        "mockery/mockery": "0.8.*"
    }
}
